{
  "compilerOptions": {
    "outDir": "dist",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-native",
    "lib": ["es2017"],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "noUnusedLocals": true
  },
  "typeRoots": ["./src/types"],
  "exclude": [
    "node_modules",
    "babel.config.ts",
    "metro.config.js",
    "jest.config.js"
  ]
}
